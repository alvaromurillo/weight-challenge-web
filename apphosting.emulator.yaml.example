# Firebase App Hosting Emulator configuration example
# Copy this file to apphosting.emulator.yaml and replace the placeholder values
# This file simulates the production environment where Firebase App Hosting
# automatically injects FIREBASE_WEBAPP_CONFIG

runConfig:
  runtime: nodejs18
  
  env:
    # Simulate the automatic injection of FIREBASE_WEBAPP_CONFIG
    # This is what Firebase App Hosting does automatically in production
    # Replace with your actual Firebase configuration
    - variable: FIREBASE_WEBAPP_CONFIG
      value: '{"apiKey":"YOUR_FIREBASE_API_KEY","authDomain":"YOUR_PROJECT.firebaseapp.com","projectId":"YOUR_PROJECT_ID","storageBucket":"YOUR_PROJECT.firebasestorage.app","messagingSenderId":"YOUR_MESSAGING_SENDER_ID","appId":"YOUR_APP_ID"}'
    
    # Application environment for emulator
    - variable: NODE_ENV
      value: development
    
    # Emulator specific flags
    - variable: FIREBASE_EMULATOR_HUB
      value: localhost:4400
    
    # Indicate we're in App Hosting Emulator
    - variable: FIREBASE_APP_HOSTING_EMULATOR
      value: true

buildConfig:
  commands:
    - npm ci
    - npm run build
  outputDir: .next 